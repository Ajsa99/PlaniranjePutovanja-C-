<Window x:Class="Putovanja.Pages.PutnikeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PutnikeWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Naslov -->
        <TextBlock Text="Putnici koji su rezervisali ovo putovanje:" FontSize="20" FontWeight="Bold" Margin="10"/>

        <!-- DataGrid za prikaz putnika -->
        <DataGrid Grid.Row="1" Name="dgPutnici" AutoGenerateColumns="False" Margin="10" BorderBrush="#999" BorderThickness="1"
                  VerticalContentAlignment="Stretch" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ime" Binding="{Binding Ime}" Width="*"/>
                <DataGridTextColumn Header="Prezime" Binding="{Binding Prezime}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Dugme za zatvaranje prozora -->
        <Button Content="Zatvori" Click="Zatvori_Click" Grid.Row="2" HorizontalAlignment="Center" Margin="10"/>
    </Grid>
</Window>
